########################################
##########  Bash Aliases  ##############
########################################

# ls
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -o'
alias lal='ls -ao'
alias lla='ls -ao'

# git
alias g='git'
alias gb='git branch'
alias gs='git status'
alias gco='git checkout'
alias gcan='git commit --amend --no-edit'
alias gca='git commit --amend'

# Term
alias cls='clear'
alias jobs='jobs -l'
alias rm='rm -iv'
